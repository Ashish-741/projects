<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>


<link rel="stylesheet" href="/styles.css">
<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 mt-3">
      <!-- dispaling flash -->
       <!-- <div class="mb-3">
        <%if(msg && msg.length){%>
          <%=msg%>
        <%}%>
       </div> -->
      <div class="card shadow mx-auto" style="width: 18rem;">
        <img src="<%=foundproduct.img%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h2 class="card-title"><%=foundproduct.name%></h2>
          <h5 class="card-title"><%=foundproduct.price%></h5>
          <p class="card-text"><%=foundproduct.desc%></p>
          <a href="/products" class="btn btn-sm btn-light">Back</a>
          <%if(currentUser && currentUser.role==='seller'){%>
            <a href="/products/<%=foundproduct.id%>/edit" class="btn btn-sm btn-dark">Edit</a>
          <%}%>
          <form method="POST" action="/user/<%=foundproduct.id%>/add" class="d-inline-block">
            <button class="btn btn-sm btn-secondary">Add to cart</button>

          </form>  
          <a href="#" class="btn btn-sm btn-success">Buy</a>
        </div>
      </div>
    </div>
    <div class="col-lg-6 mt-3">
      <h1 class="display-5 mb-4">Reviews</h1>
      <form action="/products/<%=foundproduct.id%>/review" method="POST" class="mb-4">
        <div class="mb-3">
          <label class="form-label d-block mb-2">Rating:</label>
          <div class="star-rating">
            <input type="radio" id="star5" name="rating" value="5" />
            <label for="star5" title="5 stars">&#9733;</label>
            <input type="radio" id="star4" name="rating" value="4" />
            <label for="star4" title="4 stars">&#9733;</label>
            <input type="radio" id="star3" name="rating" value="3" />
            <label for="star3" title="3 stars">&#9733;</label>
            <input type="radio" id="star2" name="rating" value="2" />
            <label for="star2" title="2 stars">&#9733;</label>
            <input type="radio" id="star1" name="rating" value="1" />
            <label for="star1" title="1 star">&#9733;</label>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="comment">Comment:</label>
          <textarea class="form-control" name="comment" rows="3" id="comment"></textarea>
        </div>
        <button class="btn btn-sm btn-success">Add Review</button>
      </form>
      <div class="my-3">
        <% for(let review of foundproduct.reviews){ %>
          <div class="card mb-3 p-3">
            <h5 class="mb-2">Rating:</h5>
            <div class="mb-2">
              <% for(let i=1; i<=5; i++){ %>
                <% if(i <= review.rating){ %>
                  <span style="color: #ffc107; font-size: 1.2em;">&#9733;</span>
                <% } else { %>
                  <span style="color: #e4e5e9; font-size: 1.2em;">&#9733;</span>
                <% } %>
              <% } %>
              <span class="ms-2 text-muted"><%= review.rating %> stars</span>
            </div>
            <p class="card-text mb-1">Comment: <%=review.comment%></p>
            <% if (review.createdAt) { %>
              <p class="text-muted small mb-2">
                Posted on: <%= review.createdAt.toDateString() %>
              </p>
            <% } %>
            <a href="#" class="btn btn-primary btn-sm">Delete</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

</body>
</html>